#include<iostream>
#include<cstdlib>
#include<iomanip>
using namespace std;
int main() 
{
   int max;
   max = 100;
   srand(time(0));
   int a = rand()%max;
   cout << "The random number is: "<< a;
   int b = rand()%max;
   cout << "\nThe random number is: "<< b;
   int c = rand()%max;
   cout << "\nThe random number is: "<< c;
   
   int sum = a + b + c;
   cout << "\nThe sum is : " << sum << endl;
   
   double average = sum/3;
   cout << "The average is : " << setprecision(5) << average;
   return 0;
   
}
